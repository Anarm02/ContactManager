@model PersonResponse
@{
    ViewBag.Title = "Edit Person";
    ViewBag.CurrentUrl = "~/Persons/Delete";
}
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span class="text-grey">Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">People</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Create</span>
        </div>
    </div>
</div>

<div class="form-container">
    <a asp-controller="Persons" asp-action="Index" class="link-hover">Persons List</a>
    <h2 class="text-large">Delete Person</h2>
    <h4>Are you sure to delete this person</h4>
    <form asp-controller="persons" asp-action="delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Name">Person Name</label>

            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" />
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button-red-back button">Delete</button>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }

                        </ul>

                    </div>
                }
            </div>
        </div>
    </form>
</div>
